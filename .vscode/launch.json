    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Java",
            "request": "launch",
            "mainClass": "",
            "args": "${command:SpecifyProgramArgs}",
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Python",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "python.pythonPath": "/usr/local/Cellar/python@3.9/3.9.1_1/bin/python3",
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "C/C++",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [
                "configs/example.json"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "lldb",
            "preLaunchTask": "C/C++: g++ build active file",
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ],
    "python": "${command:python.interpreterPath}"
}